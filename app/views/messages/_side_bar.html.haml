.side-bar
  .side-bar__header
    .side-bar__header--box
      %span.name
        = current_user.name
      %ul.list
        %li.list__list-icon
          =link_to new_group_path do
            = icon('fas', 'far fa-edit')
        %li.list__list-icon
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups--group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message