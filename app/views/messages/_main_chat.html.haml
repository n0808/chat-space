.main
  .main__main-header
    .main__main-header--group
      .group-name
        = @group.name
      .ul-member
        Member : 
        - @group.users.each do |user|
          .li= user.name

    .main__main-header--edit
      =link_to edit_group_path(@group) do 
        Edit
  .main__contents
    = render @messages

  .main__chat-form
    = form_with model: [@group, @message], html:{class: "Form"}, local: true do |f|
      .Form__new-message
        = f.text_field :content, class: 'content-form', placeholder: 'type a message'
        = f.label :image, class: 'label' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'file'
        = f.submit 'Send', class: 'submit-btn'
